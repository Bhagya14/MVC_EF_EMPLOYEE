@model IEnumerable<MVC_EF_employee.Models.EmployeeModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div align="center">
        @using (Html.BeginForm("Search", "Employee", FormMethod.Post,
                    new { @class = "container", @style = "text-align:left;width:30%;" }))
        {
            <div class="form-group">
                <label class="form-control-static">search key:</label>
                <input type="text" id="key" name="key" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn-danger" />
            </div>
        }
        <table class="table" style="width:70%">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.employeename)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.employeecity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.employeesalary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.employeepassword)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.employeedoj)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.employeename)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.employeecity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.employeesalary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.employeepassword)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.employeedoj)
                    </td>
                    <td>
                        @Html.ActionLink("View details", "Find", "Employee", new { id = item.employeeid }, null)
                    </td>
                </tr>
            }

        </table>
        </div>
</body>
</html>
